<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <script type="text/javascript" src="/js/bootstrap.bundle.js"></script>

    <title>Edit Reservation</title>
</head>
<body>
    <div class="container-md">
        <br>
        <h1>Edit Reservation</h1>
        <hr>
        <br>

        <form id="form-submit" class="" action="/reservation/create" method="post">
            <!--ROW-->
            <div class="row justify-content-center py-2">

                <!-- COLUMN 1: Room Details -->
                <div class="col-5 me-3 border p-4 pt-2 rounded">
                    <h3 class="pb-2 ps-2 pt-2 border-bottom mb-3">Room Details</h3>

                    <!--Room Type-->
                    <div class="form-group">
                        <label class="h5">Room Type</label>
                        <select class="form-select form-control w-75" id="reserve_type_select" name="reserve_type_select">
                            <option class="text-muted" selected>Select the room type</option>
                            {{#each room_types}}
                            <option value={{this}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <p class="error" id="reserve-type-error"><em>Error message here</em></p>
                    </div>

                    <!-- Start Date -->
                    <div class="form-group">
                        <label class="h5 d-block">Start Date</label>
                        <input class="form-control w-75" type="date" id="start-date" name="start_date" value={{formatDate date}}>
                        <p class="error" id="start-date-error"><em>Error message here</em></p>
                    </div>

                    <!-- End Date -->
                    <div class="form-group">
                        <label class="h5 d-block">End Date</label>
                        <input class="form-control w-75" type="date" id="end-date" name="end_date">
                        <p class="error" id="end-date-error"><em>Error message here</em></p>
                    </div>
                </div>

                <!--COLUMN 2: Customer Details-->
                <div class="col-6 border p-4 pt-2 rounded">
                    <h3 class="pb-2 ps-2 pt-2 border-bottom mb-3">Customer Details</h3>

                    <!--First Name-->
                    <div class="form-group">
                        <label class="h5 d-block">First Name</label>
                        <input class="form-control w-50" type="text" placeholder="Enter First Name" id="firstname" name="firstname">
                        <p class="error" id="firstname-error"><em>Error message here</em></p>
                    </div>

                    <!--Last Name-->
                    <div class="form-group">
                        <label class="h5 d-block">Last Name</label>
                        <input class="form-control w-50" type="text" placeholder="Enter Last Name" id="lastname" name="lastname">
                        <p class="error" id="lastname-error"><em>Error message here</em></p>
                    </div>

                    <!--OPTIONAL FIELDS BELOW-->
                    <hr>

                    <!--Birthday-->
                    <div class="form-group">
                        <label class="h5 d-block">Birthdate</label>
                        <!--<input type="text" placeholder="*To Date" onfocus="(this.type='date')" onblur="(this.type='text')" >-->
                        <input class="form-control w-50" type="text" placeholder="(Optional) Enter Birthdate" onfocus="(this.type='date')" onblur="(this.type='text')" id="birthdate" name="birthdate">
                    </div>

                    <!--Address-->
                    <!--TODO: Remove resizability factor-->
                    <div class="form-group">
                        <label class="h5 d-block">Address</label>
                        <textarea class="form-control w-75" placeholder="(Optional) Enter Address" id="address" name="address" rows="3"></textarea>
                    </div>

                    <!--Contact No.-->
                    <div class="form-group">
                        <label class="h5 d-block">Contact No.</label>
                        <input class="form-control w-75" type="text" placeholder="(Optional) Enter Contact No." id="contact" name="contact">
                    </div>

                    <!--Company's Name-->
                    <div class="form-group">
                        <label class="h5 d-block">Company Name</label>
                        <input class="form-control w-75" type="text" placeholder="(Optional) Enter Company Name" id="company" name="company">
                    </div>

                    <!--Occupation-->
                    <div class="form-group">
                        <label class="h5 d-block">Occupation</label>
                        <input class="form-control w-50" type="text" placeholder="(Optional) Enter Occupation" id="occupation" name="occupation">
                    </div>
                </div>

            </div>
            <div class="d-flex flex-row-reverse mt-3">

                <!-- Modify trigger modal -->
                <button id="modify" type="button" class="btn btn-primary mb-3 mt-2 w-25" data-bs-toggle="modal" data-bs-target="#modifyModal">
                    <strong>Modify</strong>
                </button>
                <!-- Modal -->
                <div class="modal fade" id="modifyModal" tabindex="-1" aria-labelledby="modifyModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="reserveModalLabel">Modify Reservation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to modify the reservation with the following information?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><strong>Close</strong></button>
                                <button id="submit" type="submit" class="btn btn-primary"><strong>Confirm</strong></button>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="javascript: history.back()" class="btn btn-secondary mb-3 mt-2 me-2 w-25"><strong>Return</strong></a>
            </div>
        </form>

        <!--Delete Form-->
        <form id="form-delete" class="d-flex form-inline flex-row-reverse m-0 mb-4" action="reservation/delete" method="get">
            <!--Delete Post-->
            <!-- Button trigger modal -->
            <button id="delete" type="button" class="btn btn-danger m-0 mb-4 w-25" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <strong>Delete</strong>
            </button>
            <!-- Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="reserveModalLabel">Delete Reservation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete the reservation?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><strong>Close</strong></button>
                            <button id="delete" type="submit" class="btn btn-danger"><strong>Delete</strong></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>

</body>
</html>
